version: "3.8"
services:
  wordpress:
    image: {{ wordpress_image }}
    restart: unless-stopped
    environment:
      WORDPRESS_DB_HOST: "{{ db_host }}"
      WORDPRESS_DB_USER: "{{ db_secret.username }}"
      WORDPRESS_DB_PASSWORD: "{{ db_secret.password }}"
      WORDPRESS_DB_NAME: "{{ db_name }}"
    volumes:
      - wordpress_data:/var/www/html
    networks:
      - wpnet

  nginx:
    image: {{ wordpress_nginx_image }}
    restart: unless-stopped
    ports:
      - "{{ wordpress_host_port }}:80"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
    depends_on:
      - wordpress
    networks:
      - wpnet

volumes:
  wordpress_data:

networks:
  wpnet:
    driver: bridge
